<configure xmlns="http://namespaces.sterch.net/conveyor">
	
	<include file="queue.zcml"/>
	
	<conveyor name="Test #1">
		<init_stage
			name="Initial stage"
			activity = "sterch.conveyor.tests.activities.jobs"
			quantity = "1"
			delay = "3"
			out_queue = "Queue #1"/>

		<stage
			name="x10"
			activity = "sterch.conveyor.tests.activities.mul10"
			quantity = "3"
			in_queue = "Queue #1"
			out_queue = "Queue #2"/>

		<stage
			name="increment"
			activity = "sterch.conveyor.tests.activities.increment"
			quantity = "4"
			in_queue = "Queue #2"
			out_queue = "Queue #3"/>

		<final_stage
			name="Final stage"
			activity = "sterch.conveyor.tests.activities.jobs"
			quantity = "1"
			delay = "1"
			in_queue = "Queue #3"/>
	</conveyor>

</configure>